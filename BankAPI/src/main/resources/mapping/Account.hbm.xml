<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bank.model.Account" table="accounts">
        <id name="id" type="java.lang.Long">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="accountNumber" type="java.lang.Long">
            <column name="account_number" />
        </property>
        <property name="balance" type="java.math.BigDecimal">
            <column name="balance" default= "0" />
        </property>
        <many-to-one name="client" class="bank.model.Client" fetch="select">
            <column name="client_id" not-null="true" />
        </many-to-one>
        <set name="cards" table="card_id"
             inverse="true" lazy="true" fetch="select" cascade="all">>
            <key>
                <column name="id" not-null="true" />
            </key>
            <one-to-many class="bank.model.Card" />
        </set>
    </class>
</hibernate-mapping>